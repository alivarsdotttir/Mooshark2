@model Mooshark2.Models.ViewModels.TeacherViewModels.TeacherSubmissionsViewmodel

@{
    ViewBag.Title = "Submissions";
}

<h2>Submissions</h2>

<div class="col-xs-6">
    <div class="right-inner-addon">
        <i class="glyphicon glyphicon-search"></i>
        <input id="search" type="search"
               class="form-control"
               placeholder="Search" />
    </div>
</div>
<table class="table table-bordered table-striped" id="table">
    <caption class="left">Submissions for @Model.currentSubproject.Name</caption>
    <thead>
    <tr>
        <th>Submission number</th>
        <th>Name</th>
        <th>Date</th>   
        <th>Accepted</th>
        <th>Grade</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var last in Model.bestSubmissions)
        {
            for (var i = 0; i < Model.usersForSubmissions.Count; i++)
            {
                <tr>
                    <td>@last.SubmissionNr</td>
                    <td>@Html.ActionLink(Model.usersForSubmissions[i].FullName, "StudentSubmissions", new { studentId = Model.usersForSubmissions[i].Id, subprojectId = Model.currentSubproject.ID })</td>
                    <td>@last.Date</td>
                    <td>
                        @if (last.Accepted == true)
                        {
                            @Html.ActionLink("Accepted", "SubmissionDetail", new { submissionID = last.ID, studentId = Model.usersForSubmissions[i].Id })
                        }
                        @if (last.Accepted == false)
                        {
                            @Html.ActionLink("Wrong Answer", "SubmissionDetail", new { submissionID = last.ID, studentId = Model.usersForSubmissions[i].Id })
                        }
                    </td>
                    <td>@last.Grade</td>
                </tr>
            }
        }
    </tbody>
</table>
