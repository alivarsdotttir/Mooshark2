@using System.Activities.Statements
@using Microsoft.Ajax.Utilities
@using Mooshark2.Models.Entities
@model Mooshark2.Models.ViewModels.TeacherViewModels.TeacherCourseViewModel
@{
    ViewBag.Title = "Course";
}

<link href="~/Content/Site.css" rel="stylesheet" />
<h2>Course</h2>
    <div>
        <table class="table table-bordered table-striped">
            <caption class="left">@Model.course.Name</caption>
            <thead>
                <tr>
                    <th>Visability</th>
                    <th>Course</th>
                    <th>Assignment</th>
                    <th>Deadline</th>
                    <th>Graded</th>
                    <th>Group</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model.courseProjects) {
                        <tr>
                             <td>@project.Visibility</td>
                             <td>@Html.ActionLink(Model.course.Name, "Course", new { id = Model.course.ID })</td>
                             <td>@Html.ActionLink(project.Name, "ProjectDetails", new { id = project.ID } ) </td>
                             <td>@project.Deadline</td>
                             <td>@project.Graded</td><!--not finished, check again after Graded has been written-->
                             <td><!--veit ekki hvernig ég á að ná í groups þarf ég að gera nýtt thing í courseVieweModel--></td>
                         </tr>
                }
               
            </tbody>
         </table>
    </div>
    <div>
        @Html.ActionLink("Create new project", "CreateProject", new { id = Model.course.ID }, new { @class = "btn btn-primary btn-lg TeacherButtons" })    
    </div>
    <div>
        @Html.ActionLink("Back to Main Page", "Index", "Teacher", null, new { @class = "btn btn-primary btn-lg TeacherButtons" })
    </div>
